<div class="search">
  <div class="col-md-12">
    <%= form_tag search_shows_path,  method: :get, class: "search", role: "search" do %>
      <%= button_to search_shows_path, {remote: true, class: "btn btn-small"} do %><span class="fa fa-search">
        <input placeholder="Search" class="search"></input></span>
      <% end %>
    <% end %>
  </div>
<br>

<div class="add"><%= link_to 'Add TV Show', new_show_path %></div>
<br>
<br>
<% @shows.each do |show| %> 
  <div class="col-xs-8 col-sm-4 col-lg-3">
    <div class="thumbnail" align = "center">
      <%= link_to (image_tag show.image.url(:medium), class: 'image') , show %>
      <!--<%= link_to show.title, show %>-->
      <%= link_to 'Remove', show, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div> 

<% end %>

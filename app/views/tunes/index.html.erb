<div class="search">
  <div class="col-md-12">
    <%= form_tag search_tunes_path,  method: :get, class: "search", role: "search" do %>
      <%= button_to search_tunes_path, {remote: true, class: "btn btn-small"} do %><span class="fa fa-search">
        <input placeholder="Search" class="search"></input></span>
      <% end %>
    <% end %>
  </div>
<br>

<div class="add"><%= link_to 'Add Music', new_tune_path %></div>
<br>
  <% @tunes.each do |tune| %>
    <div class="col-xs-6 col-sm-4 col-lg-3">
      <div class="thumbnail" align = "center">
        <%= link_to (image_tag tune.image.url(:medium), class: 'image') , tune %>
        <!--<%= link_to tune.title,tune %><br>-->
        <%= link_to 'Remove', tune, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div> 
  <% end %>

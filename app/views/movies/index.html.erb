<div>
  <a href="http://www.fandango.com/_movietimes?wss=link728x90"><img src="http://www.statf.com/r99.9/redesign/areas/staticpages/img/linktous/search/728x90/v1.gif" border="0" alt="Find Theater Showtimes" /></a>
  <script type="text/javascript" src="http://www.fandango.com/affiliatewidget_srchban_728x90.js?r=249_686197"></script>
</div>
<div class="search">
  <div class="col-md-12">
    <%= form_tag search_movies_path,  method: :get, class: "navbar-form navbar-right", role: "search" do %>
      <%= text_field_tag :search, params[:search], class: "form-control" %>
      <%= button_to search_movies_path, {remote: true, class: "btn btn-small"} do %>
        <span class="fa fa-search"></span>
        <input placeholder="Search"></input>    
      <% end %>
    <% end %>
  </div>
</div>
<br>

<div class="add"><%= link_to 'Add Movie', new_movie_path %></div>
<br>


<% @movies.each do |movie| %>
  <div class="col-xs-8 col-sm-4 col-lg-3">
    <div class="thumbnail" align="center">
      <%= link_to (image_tag movie.image.url(:medium), class: 'image') , movie %>
      <%= link_to movie.title, movie %> |
      <%= link_to 'Remove', movie, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div> 
<% end %>



<h1><%= @tune.title %></h1>
<div class="row">
  <div class="col-md-5">
    <%= image_tag @tune.image.url(:medium) %>
  </div>

  <div class="col-md-4 col-md-offset-1">
    <h1 class="review_title">Reviews</h1><br>
    <% if @reviewtunes.blank? %>
      <h3 align = "center">No reviews yet, go ahead and become the first!</h3>
      <%= link_to "Review it", new_tune_reviewtune_path(@tune), class: "btn btn-info" %>
    <% else %>
      <% @reviewtunes.each do |reviewtune| %>
        <div class="reviews">
          <p align="center"><%= reviewtune.comment %></p>
        </div>
      <% end %>
    <% end %>
    <%= link_to "Edit", edit_tune_path(@tune) %> |
    <%= link_to 'Back', tunes_path %>
  </div>
</div>


 

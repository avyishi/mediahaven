<h1><%= @movie.title %></h1>
<%= link_to "Review it", new_movie_review_path(@movie), class: "btn btn-info" %>
<%= link_to "Edit", edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

<div class="row">
  <div class="col-md-5">
    <%= image_tag @movie.image.url(:medium) %> 
  </div>

  <div class="col-md-4 col-md-offset-1">
    <h1 class="review_title">Reviews</h1>
    <br>
    <% if @reviews.blank? %>
      <h3>No reviews yet, go ahead and become the first!</h3>
    <% else %>
      <% @reviews.each do |review| %>
        <div class="reviews">
          <div class="col-md-4 col-md-offset-3">
            <p><%= review.comment %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



 

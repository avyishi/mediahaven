<!DOCTYPE html>
<html>
<head>
  <title>Mediahaven</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>


</head>
<body>

    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : 'your-app-id',
          xfbml      : true,
          version    : 'v2.1'
        });
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>

    <div class="pull-right user-info">
      <% if current_user %>
        <em> Hello <%= current_user.email %>!</em> <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
      <% else %>
      <% end %>
    </div>


    <div id="wrapper">
      <div class="container-fluid">
        <ul class="nav nav-tabs">  
          <%= link_to "Home", root_path %> |
          <%= link_to "TV Shows", shows_path %>|
          <%= link_to "Movies", movies_path %> |
          <%= link_to "Music", tunes_path %> |
          <%= link_to "About", about_path %>
        </ul>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p> 
      <%= yield %>

      <footer id="footer" align="center"> 
          <%= link_to "Home", root_path %> |
          <%= link_to "TV Shows", shows_path %>|
          <%= link_to "Movies", movies_path %> |
          <%= link_to "Music", tunes_path %> |
          <%= link_to "About", about_path %> 
        <br>
          <em>
            Copyright &copy; 2015 CBS VI 360
          </em>
      </footer>
    </div>
  </body>
</html>

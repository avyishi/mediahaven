<h1><%= @tune.title %></h1>
<%= link_to "Review it", new_tune_reviewtune_path(@tune), class: "btn btn-info" %><br><br>
<%= link_to "Edit", edit_tune_path(@tune) %> |
<%= link_to 'Back', tunes_path %>


<div class="row">
  <div class="col-md-5">
    <%= image_tag @tune.image.url(:large) %>
  </div>

  <div class="col-md-4 col-md-offset-1">
    <h1 class="review_title">Reviews</h1>
    <br>
    <% if @reviewtunes.blank? %>
      <h3>No reviews yet, go ahead and become the first to review this album!</h3>
      </div>
    <% else %>
      <% @reviewtunes.each do |reviewtune| %>
        <div class="reviews">
          <p class="col-md-8 col-md-offset-3"><%= reviewtune.comment %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


 
